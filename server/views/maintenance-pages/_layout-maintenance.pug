doctype html

block vars

- var title = pageTitle ? 'Mailing Builder - ' + pageTitle : 'Mailing Builder'

html(lang="en")
  head
    title=title
    meta(http-equiv="Content-Type", content="text/html; charset=UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(name="Title", content=title)

  style.
    html, body { margin: 0; padding: 0; background: #ff9f00; color: #616161; font-family: Helvetica, Arial, Sans-serif; text-align: center; }
    html { height: 100%; }
    body { min-height: 100%; }
    main { display: block; width: 100%; padding: 0 1em; position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); }
    h1 { font-weight: 200; margin-top: 0; }
    h1 a { display: inline-block; }
    h2 { font-weight: 200; font-size: 2em; }
    a { color: currentColor; font-weight: 700; }
    a:hover { text-decoration: none; }
    .fr::before { content: ''; width: 100px; border-top: 1px solid #616161; display: inline-block; }

body
  main(role="main")
    h1
      a(href="#") Mailing Builder


